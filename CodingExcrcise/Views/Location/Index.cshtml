@model CodingExcrcise.Models.Location

@using (Html.BeginForm("Pollution", "Location", FormMethod.Post, new { @id = "form", onsubmit = "return validateForm();" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Search for Pollution by City: </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Search by Name", new { @class = "col-md-2" })
        <div class="col-md-2">
            @Html.RadioButton("SearchBy", "Coordinates", false)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <fieldset>

        <div class="form-group">
            @Html.Label("Search by Coordinates", new { @class = "col-md-2" })
            <div class="col-md-2">
                @Html.RadioButton("SearchBy", "Coordinates", true)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Coordinate.Latitude, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Coordinate.Latitude, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Coordinate.Longitude, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Coordinate.Longitude, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Home", "Index")
</div>
@section scripts {
    <script type="text/javascript">
        function validateForm() {
            //check validate if all field are validate true
            if ($('#Coordinate_Latitude').val() == '' ) {
                alert('Please provide latitude');
                $('#Coordinate_Latitude').focus();
                return false;
            }
            if ($('#Coordinate_Longitude').val() == '') {
                alert('Please provide longitude');
                $('#Coordinate_Longitude').focus();
                return false;
            }

            return true;
        }
    </script>
}

